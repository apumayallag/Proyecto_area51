<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pe.area51.proyecto">

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS" />
    <uses-permission android:name="android.permission.READ_LOGS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icono_proy"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterUserActivity" />
        <activity android:name=".PrincipalActivity" />
        <activity android:name=".PerfilActivity" />
        <activity android:name=".ListadoActivity" />
        <activity android:name=".ComprobanteActivity" />
        <activity android:name=".TusComprasActivity" />
        <activity android:name=".ListadoComprobanteActivity" />
        <activity android:name=".ProductoActivity" />
        <activity android:name=".BoletaActivity" />
        <activity android:name=".FacturaActivity" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/key" />

        <activity android:name=".MapaActivity" />
        <activity android:name=".PreVentaActivity" />
        <activity android:name=".DetalleVentaActivity"></activity>
    </application>

</manifest>